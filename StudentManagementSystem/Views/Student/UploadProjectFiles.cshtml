@model StudentManagementSystem.ViewModels.ProjectFileUploadViewModel

@{
    ViewData["Title"] = "Incarca fisierele proiectului";
}

<h2>Incarca fisierele proiectului</h2>

<form asp-action="UploadProjectFiles" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProjectID" />
    <div class="form-group">
        <label asp-for="Files" class="control-label"></label>
        <input asp-for="Files" class="form-control" type="file" multiple />
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Incarca</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}